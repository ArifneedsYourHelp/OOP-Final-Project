<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finaldemo.controller.MovieFormController"
      spacing="15" prefWidth="400" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Title"/>
    <TextField fx:id="titleField"/>

    <Label text="Genre"/>
    <TextField fx:id="genreField"/>

    <HBox spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Rating"/>
            <RadioButton fx:id="gRating" text="G"/>
            <RadioButton fx:id="pgRating" text="PG"/>
            <RadioButton fx:id="pg13Rating" text="PG-13"/>
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Duration:"/>
            <TextField fx:id="durationField" promptText="XX:XX:XX"/>
        </VBox>
    </HBox>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="addButton" text="Add" onAction="#handleAdd" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
